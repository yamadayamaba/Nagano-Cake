<h1>商品編集</h1>
<%= form_with model:@item, local:true do |f| %>
  <h4>商品画像</h4>
  <%= f.attachment_field :image %>
  <h4>商品名</h4>
  <%= f.text_field :name %>
  <h4>商品説明</h4>
  <%= f.text_area :introduction %>
  <h4>値段(税抜き)</h4>
  <%= f.text_field :price %>
  <%= f.submit"編集" %>
<% end %>

<%= link_to "Back", admin_items_path %>