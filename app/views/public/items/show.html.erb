<div>
    <%= form_with model:@item local:true do |f| %>
    <p>商品名:<%= @item.name%></p>
    <%= attachment_image_tag @item, :image, :fill, 100, 100, format:'jpeg', fallback:"no_image.jpg" %>
    <p>商品説明:<%= @item.introduction %></p>
    <p>価格(税抜き):<%= @item.price %></p>
    <p>数量を選択してください</p>
    <%= f.hidden_field :cart_item_id, value: cart_item_id %>
    <%= f.select :amount, *[1..3] %>
    <%= f.submit 'カートに入れる' %>
    <% end %>
    <%= link_to "一覧", admin_items_path %>
  </div>