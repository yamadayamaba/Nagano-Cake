<h1>商品一覧</h1>

  <table>
    <thead>
      <tr>
        <th>商品名</th>
        <th>商品説明</th>
        <th>価格(税抜き)</th>
        <th></th>
        <th></th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <% @items.each do |item| %>
        <td>
          <%= link_to admin_item_path(item.id) do %>
          <%= attachment_image_tag item, :image, :fill, 100, 100, format:'jpeg', fallback: "no_image.jpg" %>
          <%= item.name %>
          <% end %>
        </td>
        <td><%= item.introduction %></td>
        <td><%= item.price %></td>
        <td><%= link_to "詳細", admin_item_path(item.id) %></td>
        <% end %>
      </tr>
    </tbody>
  </table>
