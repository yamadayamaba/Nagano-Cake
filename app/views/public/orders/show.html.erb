<h1>注文履歴一覧</h1>
<table>
  <thead>
    <tr>
      <th>注文日</th>
      <th>配送先</th>
      <th>支払方法</th>
      <th>注文内容詳細</th>
      <th>請求金額</th>
    </tr>
  </thead>
  <tbody>
    <% @order.each do |order| %>
    <tr>
      <td><%= link_to created_at.strftime('%Y/%m/%d') %></td>
      <td><%= order.address %></td>
      <td><%= order.payment_method %></td>
      <td><%= @item.name %><%= @item.price %><%= @cart_item.amount %><%= @cart_item.subtotal %></td>
      <td><%= order.billing_amount %></td>
    </tr>
    <% end %>
  </tbody>
</table>