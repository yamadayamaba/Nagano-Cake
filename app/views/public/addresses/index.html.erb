<h1>配送先一覧</h1>

<table>
  <thead>
    <tr>
      <th>宛名</th>
      <th>郵便番号</th>
      <th>住所</th>
    </tr>
  </thead>
  <tbody>
    <% @addresses.each do |address| %>
    <tr>
      <td><%= address.name %></td>
      <td><%= address.postal_code %></td>
      <td><%= address.address %></td>
    <% end %>
    </tr>
  </tbody>
</table>

<h2>配送先追加</h2>

<%= form_with model:@address local:true do |f| %>
  <h4>宛名</h4>
  <%= f.text_field :name %>
  <h4>郵便番号</h4>
  <%= f.text_field :postal_code %>
  <h4>住所</h4>
  <%= f.text_field :address %>
  <%= f.submit '追加' %>
  <% end %>
